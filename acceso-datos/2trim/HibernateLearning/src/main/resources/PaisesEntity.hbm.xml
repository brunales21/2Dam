<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.PaisesEntity" table="paises" schema="empleados">
        <id name="idPais">
            <column name="id_pais" sql-type="char(2)" length="2"/>
        </id>
        <property name="nombrePais">
            <column name="nombre_pais" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="idRegion">
            <column name="id_region" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>