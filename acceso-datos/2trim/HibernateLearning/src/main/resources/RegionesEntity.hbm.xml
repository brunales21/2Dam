<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.RegionesEntity" table="regiones" schema="empleados">
        <id name="idRegion">
            <column name="id_region" sql-type="int"/>
        </id>
        <property name="nombreRegion">
            <column name="nombre_region" sql-type="varchar(25)" length="25" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>