<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entidades.TrabajosEntidad" table="trabajos" schema="empleados">
        <id name="idTrabajo" column="id_trabajo"/>
        <property name="nombreTrabajo" column="nombre_trabajo"/>
        <property name="minSalario" column="min_salario"/>
        <property name="maxSalario" column="max_salario"/>
    </class>
</hibernate-mapping>