<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entidades.DepartamentosEntidad" table="departamentos" schema="empleados">
        <id name="idDepartamento" column="id_departamento"/>
        <property name="nombreDepartamento" column="nombre_departamento"/>
        <property name="idDirector" column="id_director"/>
        <property name="idLocalizacion" column="id_localizacion"/>
    </class>
</hibernate-mapping>